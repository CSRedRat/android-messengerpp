<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:background="@color/gray"
              a:layout_width="fill_parent"
              a:layout_height="wrap_content"
              a:orientation="horizontal">

    <TextView a:id="@+id/friends_sub_header_left"
              a:textColor="@android:color/black"
              a:layout_weight="1"
              a:gravity="left"
              a:layout_width="0dp"
              a:layout_height="wrap_content"/>

    <TextView a:id="@+id/friends_sub_header"
              a:textColor="@android:color/black"
              a:layout_weight="5"
              a:layout_width="0dp"
              a:gravity="center"
              a:layout_height="wrap_content"/>

    <TextView a:id="@+id/friends_sub_header_right"
              a:textColor="@android:color/black"
              a:layout_weight="1"
              a:layout_width="0dp"
              a:gravity="right"
              a:layout_height="wrap_content"/>
</LinearLayout>