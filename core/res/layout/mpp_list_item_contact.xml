<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
	style="?mpp_list_item">

	<ImageView
		a:id="@+id/mpp_li_contact_icon_imageview"
		a:src="@drawable/mpp_app_icon"
		style="?mpp_list_item_icon"/>

	<LinearLayout
		a:orientation="vertical"
		a:layout_weight="1"
		a:layout_width="0dp"
		a:layout_height="wrap_content">

		<TextView
			a:id="@+id/mpp_li_contact_name_textview"
			style="?mpp_list_item_name" />

		<TextView
			a:id="@+id/mpp_li_contact_account_textview"
			a:visibility="gone"
			a:ellipsize="end"
			style="?mpp_list_item_text_secondary" />

	</LinearLayout>

	<ImageView
		a:id="@+id/mpp_li_contact_online_view"
		style="?mpp_list_item_contact_online"/>

	<ImageButton
		a:id="@+id/mpp_li_contact_call_view"
		style="?mpp_list_item_contact_call"
		a:visibility="gone"/>

</LinearLayout>