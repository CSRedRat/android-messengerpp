<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:layout_width="match_parent"
              a:layout_height="match_parent"
              a:padding="5dp"
              a:gravity="top|center"
              a:orientation="vertical">

    <ImageView a:id="@+id/contact_icon"
               a:layout_height="100dp"
               a:layout_width="100dp"
               a:contentDescription="@string/contact_icon"/>

    <TextView a:id="@+id/contact_name"
              a:textColor="@color/text"
              a:layout_height="wrap_content"
              a:layout_gravity="center"
              a:gravity="center"
              a:layout_width="match_parent"/>

    <TextView a:id="@+id/contact_phone_label"
              a:textColor="@color/selected"
              a:layout_width="match_parent"
              a:layout_height="wrap_content"
              a:text="@string/phone"/>

    <TextView a:id="@+id/contact_phone"
              a:textColor="@color/text"
              a:layout_width="match_parent"
              a:layout_height="wrap_content"
              a:text="@string/phone"/>


</LinearLayout>