<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
	a:orientation="horizontal"
	a:layout_width="match_parent"
	a:layout_height="wrap_content">

	<Button
		a:id="@id/mpp_back_button"
		a:text="@string/mpp_back"
		style="?mpp_form_button" />

	<Button
		a:id="@id/mpp_remove_button"
		a:visibility="gone"
		a:text="@string/mpp_remove"
		style="?mpp_form_button" />

	<Button
		a:id="@id/mpp_save_button"
		a:text="@string/mpp_save"
		style="?mpp_form_button" />

</LinearLayout>