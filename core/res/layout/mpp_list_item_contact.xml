<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    style="@style/mpp_list_item">

    <ImageView
        a:id="@+id/mpp_li_contact_icon_imageview"
        a:src="@drawable/mpp_app_icon"
        style="@style/mpp_list_item_icon"
        a:layout_centerInParent="true"
        a:layout_alignParentLeft="true" />

    <ImageView
        a:id="@+id/mpp_li_contact_online_view"
        style="@style/mpp_list_item_contact_online"
        a:src="@drawable/mpp_contact_online_marker"
        a:layout_centerInParent="true"
        a:layout_width="20dp"
        a:layout_height="wrap_content"
        a:layout_alignParentRight="true" />

    <TextView
        a:id="@+id/mpp_li_contact_name_textview"
        a:layout_toRightOf="@id/mpp_li_contact_icon_imageview"
        a:layout_toLeftOf="@id/mpp_li_contact_online_view"
        style="@style/mpp_list_item_name"
        a:layout_centerInParent="true" />

</RelativeLayout>