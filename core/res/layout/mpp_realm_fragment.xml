<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:orientation="vertical"
    a:layout_width="match_parent"
    a:layout_height="match_parent">

    <ImageView
        a:id="@+id/mpp_realm_icon_imageview"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_gravity="center" />

    <TextView
        a:text="@string/mpp_realm_name"
        style="@style/mpp_form_label" />

    <TextView
        a:id="@+id/mpp_realm_name_textview"
        style="@style/mpp_form_textview" />

    <LinearLayout
        a:orientation="horizontal"
        a:layout_width="match_parent"
        a:layout_height="wrap_content">

        <Button
            a:id="@+id/mpp_realm_remove_button"
            a:text="@string/mpp_remove"
            style="@style/mpp_form_button" />

        <Button
            a:id="@+id/mpp_realm_edit_button"
            a:text="@string/mpp_edit"
            style="@style/mpp_form_button" />

    </LinearLayout>

</LinearLayout>