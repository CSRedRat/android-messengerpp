<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- pressed -->
	<item android:state_pressed="true" android:drawable="@color/mpp_selected" />

	<!--
	For normal size screens selected and not selected states must be the same
	as there is no second pane on which additional content is shown
	-->
	<!-- list item selected-->
	<item android:state_activated="true" android:drawable="@android:color/transparent" />

	<!-- default, list item not selected -->
	<item android:drawable="@android:color/transparent" />
</selector>
