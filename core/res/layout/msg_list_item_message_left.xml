<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:layout_width="fill_parent"
              a:layout_height="fill_parent"
              a:gravity="left"
              a:paddingRight="50dp"
              style="@style/list_item_item">

    <LinearLayout a:layout_height="wrap_content"
                  a:background="@drawable/mpp_message_bubble_left"
                  a:layout_width="wrap_content"
                  a:gravity="left"
                  a:paddingLeft="24px"
                  a:paddingRight="5dp"
                  a:paddingTop="5dp"
                  a:paddingBottom="5dp"
                  a:orientation="horizontal">

        <ImageView a:id="@+id/message_icon"
                   a:layout_width="30dp"
                   a:layout_height="30dp"/>

        <LinearLayout a:layout_height="wrap_content"
                      a:layout_width="wrap_content"
                      a:paddingLeft="5dp"
                      a:layout_gravity="top"
                      a:background="@android:color/transparent"
                      a:orientation="vertical">

            <TextView a:id="@+id/message_body"
                      style="@style/mpp_list_item_message_text"
                      a:gravity="left"
                      a:layout_width="wrap_content"
                      a:layout_height="wrap_content"/>

            <TextView a:id="@+id/message_date"
                      style="@style/list_item_message_date"
                      a:layout_width="match_parent"
                      a:layout_height="wrap_content"
                      a:gravity="right"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>