<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:a="http://schemas.android.com/apk/res/android"
	a:layout_width="match_parent"
	a:layout_height="match_parent"
	a:paddingRight="14dp"
	a:paddingTop="2dp"
	a:paddingBottom="2dp">

	<LinearLayout
		a:id="@+id/mpp_li_message_linearlayout"
		a:background="@drawable/mpp_message_bubble_left_gray_light"
		a:paddingLeft="25dp"
		style="?mpp_list_item">

		<ImageView
			a:id="@+id/mpp_li_message_icon_imageview"
			a:layout_gravity="top"
			style="?mpp_list_item_icon"
			a:visibility="gone"
			a:src="@drawable/mpp_icon_user" />

		<LinearLayout
			style="?mpp_list_item_block"
			a:orientation="vertical">

			<TextView
				a:id="@+id/mpp_li_message_body_textview"
				style="?mpp_list_item_message_text" />

			<ImageView
				a:id="@+id/mpp_li_message_progress_imageview"
				style="?mpp_list_item_message_progress"/>

			<TextView
				a:id="@+id/mpp_li_message_date_textview"
				style="?mpp_list_item_message_date"
				a:gravity="right" />

		</LinearLayout>

	</LinearLayout>
</FrameLayout>