<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
                a:layout_width="match_parent"
                a:layout_height="match_parent"
                a:id="@+id/main"
                a:background="@color/base_bg">

    <include layout="@layout/msg_footer"
             a:id="@+id/footer"
             a:layout_width="match_parent"
             a:layout_height="0dp"
             a:layout_alignParentBottom="true"/>

    <include layout="@layout/msg_main_content"
             a:layout_above="@id/footer"
             a:layout_height="match_parent"
             a:layout_width="match_parent"/>


</RelativeLayout>